{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",

    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
